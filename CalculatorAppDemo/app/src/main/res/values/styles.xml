<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomButtonCaculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorButton</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="CustomButtonCaculatorOrange" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorOrange</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomResultCaculator" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
